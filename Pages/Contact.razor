@page "/contact"
@inject NavigationManager nav
@inject Global global
@inject IHttpClientFactory HttpClientFactory
@inject ISnackbar Snackbar

<PageTitle>OtherPeopleRecords</PageTitle>

<MudContainer Class="d-flex flex-column justify-center align-center ma-0 pa-0" Style=" width:100%; height:90vh; margin-top:40px!important; max-width: 90%">
    <div class="screen">
        <div class="screen-header">
            <div class="screen-header-left">
                <div class="screen-header-button close"></div>
                <div class="screen-header-button maximize"></div>
                <div class="screen-header-button minimize"></div>
            </div>
            <div class="screen-header-right">
                <div class="screen-header-ellipsis"></div>
                <div class="screen-header-ellipsis"></div>
                <div class="screen-header-ellipsis"></div>
            </div>
        </div>
        <div class="screen-body">
            <div class="screen-body-item">
                <div class="app-title">
                    <span>CONTACTO</span>
                </div>
                <div class="app-form">
                    <form id="contactform" action="https://formsubmit.io/send/alexalmendrosal@gmail.com" method="POST">
                        <input name="_redirect" type="hidden" id="name" value="https://otherpeople.es/contact">
                    <div class="app-form-group">
                        <input name="name" type="text" id="name" class="app-form-control" placeholder="NAME">
                    </div>
                    <div class="app-form-group">
                        <input name="email" type="email" id="email" class="app-form-control" placeholder="EMAIL">
                    </div>
                    <div class="app-form-group message">
                            <textarea name="comment" id="comment" rows="5" class="app-form-control" placeholder="MESSAGE" style="height: calc(100vh - 550px)"></textarea>
                    </div>
                        <input name="_formsubmit_id" type="text" style="display:none">
                    <div class="app-form-group buttons">
                        <button value="Submit" type="submit" class="app-form-button">SEND</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</MudContainer>

 @code {
    private ContactFormModel _contactForm = new();
}